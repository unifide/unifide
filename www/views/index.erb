<canvas id="canvas"></canvas>
<div id="editor" style="width:50%;height:50%;position:absolute;top:0px;right:0px"></div>

<div style="margin:10px;">
    <span class="welcome">
        Welcome to <strong>unif<span class="orange">ide</span></strong>!
    </span><br/>
    <button id="theme-toggle">Toggle theme</button>
    <a href="#">This is a link</a>
</div>
<div>
	<span>All Classes:</span>
	
	<%if UClass.all.empty?%>
	<p>No Classes!</p>
	<%else%>
	<ul>
		<%UClass.all.each do |uclass|%>
		<li><a href="class/<%=uclass.name%>"><%=uclass.name%></a></li>
		<%end%>
	</ul>
	<%end%>
</div>
<div>
	<%= erb :_uclass_form %>
</div>
