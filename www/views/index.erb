<div style="margin:10px;">
    <span class="welcome">
        Welcome to <strong>magnif<span class="orange">ide</span></strong>!
    </span><br/>
    <button id="theme-toggle">Toggle theme</button>
    <a href="#">This is a link</a>
</div>
<div>
	<span>All Classes:</span>
	
	<%if Klass.all.empty?%>
	<p>No Classes!</p>
	<%else%>
	<ul>
		<%Klass.all.each do |klass|%>
		<li><a href="class/<%=klass.name%>"><%=klass.name%></a></li>
		<%end%>
	</ul>
	<%end%>
</div>
<div>
	<%= erb :_klass_form %>
</div>
