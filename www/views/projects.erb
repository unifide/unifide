<h1>Projects</h1>
<h2>Public</h2>
<ul>
<%
@projects.select {|p| p.public} .each do |project|
%>
    <li><a href="/projects/<%=project.name%>"><%=project.name%></a></li>
<%
end
%>
</ul>
<%
if !@current_user.nil?
%>
<h2>Private</h2>
<ul>
<%
    @projects.select {|p| !p.public} .each do |project|
%>
    <li><a href="/projects/<%=project.name%>"><%=project.name%></a></li>
<%
    end
%>
</ul>
<%
end
%>
